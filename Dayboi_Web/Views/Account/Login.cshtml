@using Dayboi_Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập - KidSwim";
}
<!-- LOGIN FORM SECTION -->
<section class="text-white">
    <div class="cover-4"></div>
    <!-- Login area -->
    <!-- .container -->
    <div class="container">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <!-- .row -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-8 col-lg-offset-8 mar-bottom-md">
                        <h1 class="text-uppercase text-primary wow fadeInDown text-center">Đăng nhập</h1>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <form action="/" method="post" class="mar-top-lg error wow fadeInUp" data-wow-duration="1s" data-wow-delay=".6s" novalidate="" name="loginForm">
                                <div class="form-group control-group">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { placeholder = "Email", @class = "text-danger" })
                                    <p class="help-block"></p>
                                </div>
                                <div class="form-group control-group">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    <p class="help-block"></p>
                                </div>
                                <button type="submit" class="btn btn-primary btn-full btn-lg">Đăng nhập</button>
                            </form>
                        }
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.col-md-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
        <!--/ Login area -->

</section>
<!-- LOGIN FORM SECTION END -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}