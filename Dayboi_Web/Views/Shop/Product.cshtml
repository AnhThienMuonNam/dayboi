@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/assets/js/libs/owl.carousel.min.js"></script>
    <script src="~/Scripts/page_product.js"></script>
    <script>
        $(document).ready(function () {
            var data = {};
            var options = {};
            data.Product = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
            options.AddToCart = '@Url.Action("AddToCart", "Cart")';

            data.API_URLs = options;

            ko.applyBindings(MainModel(data), document.getElementById("main-page"));
        });
    </script>
}
<!-- HEADER TREE -->
<section class="header-tree" data-speed="8" data-type="background">
    <h2 class="hidden">Header tree</h2>
    <!-- parallax background -->
    <div class="cover-1" data-type="sprite" data-offsetY="-700" data-Xposition="50%" data-speed="-2"></div>
    <!-- .container -->
    <div class="container">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <ul class="breadcrumb clearfix mar-top-3x">
                    <li><a class="link text-success" href="/">Trang chủ</a></li>
                    <li><a class="link" href="~/shop/@Model.CategoryId/@Model.CategoryName">@Model.CategoryName</a></li>
                    <li><a class="link" href="#">@Model.Name</a></li>
                </ul>
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
<!-- HEADER TREE END -->

<section class="pattern-3" id="main-page">
    <!-- .container -->
    <div class="container" data-bind="with: productModel">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <!-- .row -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="thumbnail">
                            <div id="carousel-product-1" class="carousel slide" data-ride="carousel">
                                @*<ol class="carousel-indicators">
                                        <li data-target="#carousel-product-1" data-slide-to="0" class="active"></li>
                                        <li data-target="#carousel-product-1" data-slide-to="1" class=""></li>
                                        <li data-target="#carousel-product-1" data-slide-to="2" class=""></li>
                                    </ol>*@
                                <div class="carousel-inner" role="listbox">

                                    @{bool isFirstImage = true;}
                                    @foreach (var item in Model.ImageList)
                                    {
                                        if (isFirstImage)
                                        {
                                            isFirstImage = false;
                                            <div class="item active">
                                                <figure>
                                                    <img alt="First slide" src="@item" data-holder-rendered="true">
                                                    <div class="image-overlay">
                                                        <p>
                                                            <a href="@item" class="show-image">
                                                                <i class="iline2-arrows55"></i>
                                                            </a>
                                                        </p>
                                                    </div><!--image overlay-->
                                                </figure><!--/figure-->
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="item ">
                                                <figure>
                                                    <img alt="First slide" src="@item" data-holder-rendered="true">
                                                    <div class="image-overlay">
                                                        <p>
                                                            <a href="@item" class="show-image">
                                                                <i class="iline2-arrows55"></i>
                                                            </a>
                                                        </p>
                                                    </div><!--image overlay-->
                                                </figure><!--/figure-->
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="left carousel-control" href="#carousel-product-1" role="button" data-slide="prev">
                                    <span class="prev iline1-arrow244" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#carousel-product-1" role="button" data-slide="next">
                                    <span class="next iline1-arrow242" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

                        <a class="btn btn-default btn-lg pull-left mar-top-md hidden-xs hidden-sm" data-bind="click: addToCart">
                            <i class="iline2-shopping60"></i>
                            Thêm vào giỏ hàng
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h2 class="wow fadeInDown text-uppercase" data-wow-duration=".8s" data-wow-delay=".2s" data-bind="text: Name"></h2>
                        <i class="wow fadeInDown text-muted h3" data-wow-duration=".8s" data-wow-delay=".2s" data-bind="text: formatMoney(Price())"></i>
                        <a class="btn btn-default btn-lg hidden-md hidden-lg" data-bind="click: addToCart">
                            <i class="iline2-shopping60"></i>
                            Thêm vào giỏ hàng
                        </a>
                        <span class="line-sep-blue"></span>
                        <p class="wow fadeInUp" data-wow-duration="1s" data-wow-delay=".4s" data-bind="text: Description">
                        </p>
                        <ul class="ic-list wow bounceInRight" data-wow-duration="1s" data-wow-delay="1.4s">
                            <li>
                                <i class="icon iline2-bullet3"></i> <span data-bind="text: CategoryName"></span>
                            </li>
                            <li>
                                <i class="icon iline2-tag27"></i> TAGS
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
     
    </div>
    <!-- /.container -->
    <!-- /Product item -->
</section>


