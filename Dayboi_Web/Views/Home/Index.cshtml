    <section class="pattern-3">
        <!-- .container -->
        <div class="container">
            <!-- .row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel-group panel-accordion" id="accordion" role="tablist" aria-multiselectable="true">
                                @{bool IsFirstTabCourse = true;}
                                @foreach (var item in Model.Courses)
                                {

                                    <div class="panel panel-default">
                                        <div class="panel-heading" role="tab" id="heading-@item.Id">
                                            <div class="side-tab" data-target="#tab-@item.Id" data-toggle="tab" role="tab" aria-expanded="false">
                                                <h4 class="panel-title">
                                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-@item.Id" aria-expanded="true" aria-controls="collapse-@item.Id">
                                                        @item.Name
                                                    </a>
                                                </h4>
                                            </div>
                                            <i class="icon iline2-arrow407"></i>
                                        </div>
                                        @if (IsFirstTabCourse)
                                        {
                                            <div id="collapse-@item.Id" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading-@item.Id">
                                                <p class="panel-body no-margin-bottom">
                                                    @item.Description
                                                    <br />
                                                    <a href="~/khoa-hoc/@item.Id/@item.Alias" style="float:right;">Xem chi tiết</a>
                                                </p>
                                            </div>
                                            IsFirstTabCourse = false;
                                        }
                                        else
                                        {
                                            <div id="collapse-@item.Id" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading-@item.Id">
                                                <p class="panel-body no-margin-bottom">
                                                    @item.Description
                                                    <br />
                                                    <a href="~/khoa-hoc/@item.Id/@item.Alias" style="float:right;">Xem chi tiết</a>
                                                </p>
                                            </div>
                                        }
                                    </div>
                                }
                                <div>
                                    <a style="width: 100%; border-radius: 8px; " class="btn btn-primary" data-toggle="modal" data-target="#myModal" role="button" title="Đăng ký">Đăng ký</a>
                                </div>
                                <!-- /panel 3 -->
                            </div><!-- /.panel-group -->
                        </div><!-- /.col-md-6 --><div class="col-md-6 hidden-xs">
                            <!-- begin notebook mockup -->
                            <div class="md-notebook md-glare">
                                <div class="md-lid">
                                    <div class="md-camera"></div>
                                    <div class="md-screen">
                                        <!-- content goes here -->
                                        <div class="tab-featured-image">
                                            <div class="tab-content">
                                                @{bool IsFirstImageCourse = true;}
                                                @foreach (var item in Model.Courses)
                                                {
                                                    if (IsFirstImageCourse)
                                                    {
                                                        <div class="tab-pane in active" id="tab-@item.Id">
                                                            <img src="@item.Image" alt="" class="img img-responsive" />
                                                        </div>
                                                        IsFirstImageCourse = false;
                                                    }
                                                    else
                                                    {
                                                        <div class="tab-pane in" id="tab-@item.Id">
                                                            <img src="@item.Image" alt="" class="img img-responsive" />
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end notebook mockup -->
                        </div> <!-- /.col-md-6 -->
                    </div> <!--/ .row -->
                </div>
            </div>
        </div>
        <!-- comment -->
       
    </section>
