@model Dayboi_Web.ViewModels.CourseViewModel
@{
    ViewBag.Title = "CourseDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/Client/course_detail.js"></script>
    <script>
        $(document).ready(function () {
            var data = {};
            var apis = {};
            var options = {};
            data.Course = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));

            data.API_URLs = apis;
            data.Options = options;

            ko.applyBindings(MainModel(data), document.getElementById("main-page"));
        });
    </script>
}
<div id="main-page">
    <!-- HEADER TREE -->
    <section class="header-tree" data-speed="8" data-type="background">
        <h2 class="hidden">Header tree</h2>
        <!-- parallax background -->
        <div class="cover-1" data-type="sprite" data-offsetY="-700" data-Xposition="50%" data-speed="-2"></div>
        <!-- .container -->
        <div class="container">
            <!-- .row -->
            <div class="row">
                <!-- .col-md-12 -->
                <div class="col-md-12">
                    <ul class="breadcrumb clearfix mar-top-3x">
                        <li><a class="link text-success" href="/">Trang chủ</a></li>
                        <li><a class="link" href="#">@Model.Name</a></li>
                    </ul>
                </div>
                <!-- /.col-md-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
    <!-- HEADER TREE END -->
    <!-- POST BODY SECTION -->
    <section class="pattern-3 no-padding-right">
        <!-- .container -->
        <div class="container">
            <!-- .row -->
            <div class="row">
                <!-- .col-md-12 -->
                <div class="col-md-12">
                    <!-- All posts -->
                    <div class="mar-top-lg row">
                        <!-- Left part -->
                        <div class="col-md-8 blog-main">
                            <div class="post-detail sep-bottom-lg">
                                <figure class="no-margin">
                                    <img data-bind="attr:{src: Course().Image}" alt="" class="img-responsive" />
                                </figure>
                                <div class="post-detail-body sep-xs">
                                    <h3 class="text-uppercase" data-bind="text: Course().Name"></h3>
                                    <span class="line-sep-gray"></span>
                                    <div class="content" data-bind="html: showContent(Course().Content)">

                                    </div>
                                    <div class="post-detail-bottom mar-top-sm">
                                        <p class="cat-links">
                                            <a class="text-capitalize" title="Tags"><i class="iline2-tag27 no-margin"></i></a>
                                            <!-- ko foreach: Tags -->
                                            <a href="#" data-bind="text: $data"></a>
                                            <!-- /ko -->
                                        </p>
                                    </div>
                                    <ul class="post-info pull-left">
                                        <li><i class="iline2-round27 text-primary"></i> <a href="#">April 17, 2015</a></li>
                                        <li><i class="iline2-rectangular22 text-success"></i> <a href="#">30 Comments</a></li>
                                        <li><i class="iline2-heart64"></i> <a href="#">2754</a></li>
                                    </ul>
                                    <span class="clearboth">
                                    </span>
                                    <div class="text-center share-menu">
                                        <h4 class="text-center clearboth mar-top-xs">SHARE THIS ARTICLE</h4>
                                        <ul class="social">
                                            <li><a target="_blank" title="" data-toggle="tooltip" data-placement="top" href="#" class="icon iline-iline-3google27" data-original-title="Share on Google Plus"></a></li>
                                            <li><a target="_blank" title="" data-toggle="tooltip" data-placement="top" href="#" class="icon iline-3facebook27" data-original-title="Share on Facebook"></a></li>
                                            <li><a target="_blank" title="" data-toggle="tooltip" data-placement="top" href="#" class="icon iline-3pinterest14" data-original-title="Share on Pinterest"></a></li>
                                            <li><a target="_blank" title="" data-toggle="tooltip" data-placement="top" href="#" class="icon iline-3twitter19" data-original-title="Share on Twitter"></a></li>
                                            <li><a target="_blank" title="" data-toggle="tooltip" data-placement="top" href="#" class="icon iline-3linked3" data-original-title="Share on Linkedin"></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="post-detail mar-top-xs">
                                <div class="post-detail-body sep-xs">
                                    <h3>Comments</h3>
                                    <span class="line-sep-gray"></span>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                    <ul class="media-list">
                                        <li class="media">
                                            <div class="media-left">
                                                <a href="#">
