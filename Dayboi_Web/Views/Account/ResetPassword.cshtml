@model Dayboi_Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Khôi phục mật khẩu";
}
<!-- LOGIN FORM SECTION -->
<section class="text-white">
    <div class="cover-4"></div>
    <!-- Login area -->
    <!-- .container -->
    <div class="container">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <!-- .row -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-8 col-lg-offset-8 mar-bottom-md">
                        <h1 class="text-uppercase text-primary wow fadeInDown text-center">@ViewBag.Title</h1>
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Code)
                            <div class="form-group control-group">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { placeholder = "Email", @class = "text-danger" })
                            </div>
                            <div class="form-group control-group">
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { placeholder = "Mật khẩu", @class = "text-danger" })
                            </div>
                            <div class="form-group control-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Mật khẩu x2", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { placeholder = "Mật khẩu x2", @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary btn-full btn-lg">Xác nhận</button>
                        }
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.col-md-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->

</section>
<!-- LOGIN FORM SECTION END -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
